# Assign workspaces
assign [app_id="firefox"] 2
for_window [app_id="firefox"] focus

# Scratchpad 
for_window [app_id="StatsTerm|Tasks"] floating enable, resize set width 70 ppt height 65 ppt
for_window [app_id="mainTerm"] floating enable, resize set width 90 ppt height 85 ppt, move to position center 
for_window [app_id="StatsTerm|Tasks|mainTerm"] move to scratchpad
# File Manager
for_window [app_id=thunar] focus
